<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.home.versus.VersusFragment">

    <ImageView
        android:id="@+id/ivCat"
        android:layout_width="316dp"
        android:layout_height="248dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="69dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_border_cats"
        android:contentDescription="cat image"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/ivDog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivDog"
        android:layout_width="316dp"
        android:layout_height="254dp"
        android:layout_marginBottom="156dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_border_dogs"
        android:contentDescription="dog image"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="Results could not be loaded"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Retry"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvError"
        app:layout_constraintVertical_bias="0.01"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivCatLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivCat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivCat"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivDogLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivDog"
        app:layout_constraintEnd_toEndOf="@+id/ivDog"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/ivDog"
        app:layout_constraintTop_toTopOf="@+id/ivDog"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>